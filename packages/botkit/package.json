{
  "name": "@fedify/botkit",
  "version": "0.4.0",
  "description": "A framework for creating ActivityPub bots",
  "license": "AGPL-3.0-only",
  "author": {
    "name": "Hong Minhee",
    "email": "hong@minhee.org",
    "url": "https://hongminhee.org/"
  },
  "homepage": "https://botkit.fedify.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fedify-dev/botkit.git",
    "directory": "packages/botkit"
  },
  "bugs": {
    "url": "https://github.com/fedify-dev/botkit/issues"
  },
  "funding": [
    "https://opencollective.com/fedify",
    "https://github.com/sponsors/dahlia"
  ],
  "engines": {
    "deno": ">=2.0.0",
    "node": ">=22.0.0",
    "bun": ">=1.1.0"
  },
  "type": "module",
  "module": "./dist/mod.js",
  "types": "./dist/mod.d.ts",
  "exports": {
    ".": {
      "types": "./dist/mod.d.ts",
      "import": "./dist/mod.js"
    },
    "./bot": {
      "types": "./dist/bot.d.ts",
      "import": "./dist/bot.js"
    },
    "./emoji": {
      "types": "./dist/emoji.d.ts",
      "import": "./dist/emoji.js"
    },
    "./events": {
      "types": "./dist/events.d.ts",
      "import": "./dist/events.js"
    },
    "./follow": {
      "types": "./dist/follow.d.ts",
      "import": "./dist/follow.js"
    },
    "./message": {
      "types": "./dist/message.d.ts",
      "import": "./dist/message.js"
    },
    "./poll": {
      "types": "./dist/poll.d.ts",
      "import": "./dist/poll.js"
    },
    "./reaction": {
      "types": "./dist/reaction.d.ts",
      "import": "./dist/reaction.js"
    },
    "./repository": {
      "types": "./dist/repository.d.ts",
      "import": "./dist/repository.js"
    },
    "./session": {
      "types": "./dist/session.d.ts",
      "import": "./dist/session.js"
    },
    "./text": {
      "types": "./dist/text.d.ts",
      "import": "./dist/text.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "@fedify/fedify": "catalog:",
    "@fedify/markdown-it-hashtag": "^0.3.0",
    "@fedify/markdown-it-mention": "^0.3.0",
    "@js-temporal/polyfill": "catalog:",
    "@logtape/logtape": "catalog:",
    "@phensley/language-tag": "^1.12.2",
    "hono": "catalog:",
    "html-entities": "^2.6.0",
    "markdown-it": "^14.1.0",
    "mime-db": "^1.54.0",
    "url-template": "^3.1.1",
    "uuid": "^11.1.0",
    "x-forwarded-fetch": "catalog:",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "tsdown": "catalog:"
  },
  "scripts": {
    "build": "tsdown",
    "prepack": "tsdown",
    "prepublish": "deno task check && tsdown",
    "test": "tsdown && cd dist/ && node --test"
  }
}
